{
  "hooks": [
    {
      "id": "learning-path-flow",
      "trigger": "user-command",
      "event": "/learn",
      "actions": [
        {
          "type": "invoke-agents",
          "agents": [
            "foundations-expert",
            "algorithms-expert",
            "data-structures-expert",
            "complexity-theory-expert",
            "systems-expert"
          ],
          "parallel": true,
          "description": "Invoke all 5 CS experts to guide learning path"
        },
        {
          "type": "load-skills",
          "skills": [
            "cs-foundations",
            "algorithms",
            "data-structures",
            "complexity-analysis",
            "systems-computing",
            "advanced-topics"
          ],
          "description": "Load relevant CS skills"
        }
      ]
    },
    {
      "id": "problem-solving-flow",
      "trigger": "user-command",
      "event": "/problem",
      "actions": [
        {
          "type": "invoke-specialist",
          "agents": [
            "algorithms-expert",
            "data-structures-expert"
          ],
          "auto-select": true,
          "description": "Invoke relevant expert for problem help"
        },
        {
          "type": "load-skills",
          "skills": [
            "algorithms",
            "data-structures"
          ],
          "description": "Load algorithm and data structure resources"
        },
        {
          "type": "provide-hints",
          "progressive": true,
          "description": "Provide progressive hints without spoiling"
        }
      ]
    },
    {
      "id": "complexity-analysis-flow",
      "trigger": "user-command",
      "event": "/analyze",
      "actions": [
        {
          "type": "invoke-agent",
          "agent": "complexity-theory-expert",
          "description": "Invoke complexity theory expert"
        },
        {
          "type": "load-skills",
          "skills": [
            "complexity-analysis"
          ],
          "description": "Load complexity analysis resources"
        },
        {
          "type": "analyze-code",
          "type": "time-space-complexity",
          "description": "Analyze provided code for complexity"
        }
      ]
    },
    {
      "id": "quiz-flow",
      "trigger": "user-command",
      "event": "/quiz",
      "actions": [
        {
          "type": "invoke-agents",
          "agents": [
            "foundations-expert",
            "algorithms-expert",
            "data-structures-expert",
            "complexity-theory-expert",
            "systems-expert"
          ],
          "parallel": true,
          "description": "Use all experts to create domain-specific quizzes"
        },
        {
          "type": "generate-questions",
          "sources": [
            "foundations",
            "algorithms",
            "data-structures",
            "theory",
            "systems"
          ],
          "description": "Generate quiz questions"
        },
        {
          "type": "track-performance",
          "store": "local",
          "description": "Track quiz results for improvement tracking"
        }
      ]
    },
    {
      "id": "skill-context-loading",
      "trigger": "context",
      "context": [
        "user-mentions-algorithm",
        "user-asks-complexity",
        "user-needs-data-structure",
        "user-discusses-system"
      ],
      "actions": [
        {
          "type": "identify-domain",
          "description": "Identify CS domain from context"
        },
        {
          "type": "invoke-expert",
          "auto-select": true,
          "description": "Automatically invoke best expert"
        },
        {
          "type": "load-skills",
          "domain-specific": true,
          "description": "Load skills relevant to identified domain"
        }
      ]
    },
    {
      "id": "progress-tracking",
      "trigger": "scheduled",
      "schedule": "weekly",
      "actions": [
        {
          "type": "analyze-learning",
          "description": "Analyze learning progress"
        },
        {
          "type": "generate-report",
          "format": "markdown",
          "include": [
            "completed-topics",
            "in-progress",
            "weak-areas",
            "recommendations"
          ],
          "description": "Generate weekly progress report"
        }
      ]
    },
    {
      "id": "skill-caching",
      "trigger": "scheduled",
      "schedule": "daily",
      "actions": [
        {
          "type": "cache-skills",
          "skills": [
            "cs-foundations",
            "algorithms",
            "data-structures",
            "complexity-analysis",
            "systems-computing",
            "advanced-topics"
          ],
          "ttl": 86400,
          "description": "Cache skill resources for offline access"
        }
      ]
    }
  ],
  "expert-pool": {
    "type": "parallel",
    "max-concurrent": 5,
    "agents": [
      "foundations-expert",
      "algorithms-expert",
      "data-structures-expert",
      "complexity-theory-expert",
      "systems-expert"
    ],
    "fallback": "general-cs-guidance"
  },
  "caching": {
    "enabled": true,
    "ttl": 3600,
    "strategies": [
      {
        "type": "skills",
        "ttl": 86400,
        "location": "./cache/skills"
      },
      {
        "type": "quizzes",
        "ttl": 604800,
        "location": "./cache/quizzes"
      },
      {
        "type": "problems",
        "ttl": 604800,
        "location": "./cache/problems"
      }
    ]
  },
  "error-handling": {
    "failed-agent": "invoke-fallback",
    "network-error": "use-cache",
    "timeout": 30000,
    "retry": {
      "max-attempts": 3,
      "backoff": "exponential"
    }
  }
}
